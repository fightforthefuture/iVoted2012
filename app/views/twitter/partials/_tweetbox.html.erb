<div class="tweetbox">
  <%= form_for(@post) do |f| %>
    <div class="field">
      <%= f.text_area :message, :value => default_tweet, :style=> "width:100%; height: 80px;font-size: 200%;" %>
    </div>
    <%= f.hidden_field :user_id, :value=> current_user.id %>
    <%= f.hidden_field :screen_name, :value=> current_user.login %>
    <%= f.hidden_field :platform, :value => "twitter"  %>
    <div class="center">
      <%= link_to_submit 'Tweet' %>
    </div>
  <% end %>
</div>