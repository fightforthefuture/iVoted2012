<% if (params[:action] == 'edit' || params[:action] == 'show') %>
  <% if !current_page?('/') %>
     <ul class="menu">
       <% if !current_user %>
          <li><%= link_to "Gonna vote? Get your own page", "/#{params[:controller]}/new", :class=>"button grey" %></li>
       <% else %>
          <li><%= link_to "Logout", signout_path, :method => :delete, :class=>"button grey" %></li>
       <% end %>
     </ul>
   <% if current_user %> 
   
      <% if params[:action] == 'edit'  %>
        <ul class="menu">
          <li><%= link_to "Cancel", "/#{params[:controller]}/#{current_login}", :class=>"button red" %></li>
          <li><%= link_to "Save Page", "javascript:$('.edit_user').submit();", :class=>"button green" %></li>
        </ul>
      <% else %>
       <ul class="menu">
         <% if current_user && !@user.nil? && params[:action] == 'show' %> 
           <% if current_user != @user %>
              <li><%= link_to "View your page", "/#{params[:controller]}/#{current_login}", :class=>"button grey" %></li>
           <% end %>
           <% if current_user == @user %> 
              <% if !@user.voted? %>
                <li><%= link_to "I Voted", "/#{params[:controller]}/i_voted", :class=>"button green" %></li>
              <% end %>
              <li><%= link_to "Edit", "/#{params[:controller]}/#{current_login}/edit", :class=>"button grey" %></li>
            <% end %>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  <% end %>
<% end %>