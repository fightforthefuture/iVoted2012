<div class="cta">
  <h2><span  class="border">Did you vote? Will you vote?</span></h2>
  <h4>Get a Twitter badge and vote page to help moticate your followers to vote.</h4>
  <div class="padd">
    <div class="action">
      <a class="option half left selected" data-url="/login?badge=ivoted_banner">
        <div class="text">
          <p class="bubble red" style="float: left;">Yes, I voted.</p>
           <p class="explanation"></p>
        </div>
        <div class="badge medium">
          <div class="ivoted_banner"></div>
          <%= image_tag(random_avatar, :class=>"avatar")%>
        </div>
      </a>
      <div class="buffer"><div class="line"></div></div>
      <a class="option half right" data-url="/login?badge=ipledge_banner">
        <div class="badge medium">
          <div class="ipledge_banner"></div>
          <%= image_tag(random_avatar, :class=>"avatar")%>
        </div>
        <div class="text">
          <p class="bubble blue" style="float: right;">I pledge to vote.</p>
          <p class="explanation">Voting hasn't started in your state? Pledge and get a badge, page and helpful voting info.</p>
        </div>
      </a>
    </div>
  </div>
</div>

<% content_for :footer do %>
  <% javascript_tag do %>
     $(document).ready(function(){
        change_badge($("a.option.selected"));
      });
      
      $('a.option.half').bind("click", function() {
        change_badge($(this));
      });
    
      function change_badge(obj){
        $("a.option.half").removeClass('selected');
        $(obj).addClass('selected');
      }
  <% end %>
<% end %>

<p class="splash_text">
  <span class="center"><%= link_to "choose your badge", "/login?badge=ivoted_banner", :id => 'login_button', :class=>"button blue twitter"%></span>
</p>

<div class="sexy_line"></div>

<div class="followers">
  <h1 class="ribbon">
     <strong class="ribbon-content"> <%= @counts['total_followers'] %> Followers reached by these badges</strong>
  </h1>
  <a class="badge thumb" href="/login?badge=ivoted_banner">
    <div class="ivoted_banner"></div>
    <%= image_tag(random_avatar, :class=>"avatar")%>
    <p class="count"><%= @counts['ivoted_banner_count'] %> Choose This</p>
  </a>
  <a class="badge thumb" href="/login?badge=ivoted_badge">
    <div class="ivoted_badge"></div>
    <p class="count"><%= @counts['ivoted_badge_count'] %> Choose This</p>
  </a>
  <a class="badge thumb" href="/login?badge=ipledge_banner">
    <div class="ipledge_banner"></div>
    <%= image_tag(random_avatar, :class=>"avatar")%>
    <p class="count"><%= @counts['ipledge_banner_count'] %> Choose This</p>
  </a>
  <a class="badge thumb" href="/login?badge=ipledge_badge">
    <div class="ipledge_badge"></div>
    <p class="count"><%= @counts['ipledge_badge_count'] %> Choose This</p>
  </a>
  <% if !@top_users.empty? && @top_users.count == 4 %>
    <div class="top_badge_user">
      <div class="line"><h4>Top Badge Users</h4></div>
      <% for user in @top_users %>
        <a class="badge thumb" href="/users/<%= user.id %>">
          <%= image_tag(user.badge.url, :class=>"avatar")%>
          <p class="count"><%= user.twitter_screen_name %><br/><%= user.twitter_followers_count %> Followers</p>
        </a>
      <% end %>
    </div>
  <% end %>
</div>