<% content_for :head do %>
  <%= render :partial => "providers/partials/tweetbanner", :locals=> {:message => sopa_tweet} %>
<% end %>

<div class="header">
    <div class="headline bebas">
    <span class="screen_name">
      <%= h('@') if @provider.provider_type =="twitter" && (@provider.name == @provider.uuid) %><%= @provider.name %>
    </span> <span class="voted">An Anti-SOPA Voter</span>
  </div>
</div>
<div style="text-align:center;">
  <% if @provider.badge %>
    <%= image_tag(@provider.badge.url, :class=>"original", :style=> "width:250px;")%>
  <% elsif @provider.avatar %>
    <%= image_tag(@provider.avatar.url, :class=>"original", :style=> "width:250px;")%>
  <% end %>
</div>
<div class="votebox">
  <% if !@user.i_voted_for_president.blank?%>
    <div class="field">
      <div class="sexy_line"><h4><%= vote_for(@user) %></h4></div>
      <p><%= @user.i_voted_for_president %></p>
    </div>
  <% end %>
  <% if !@user.i_voted_because.blank?%>
  <div class="field">
    <div class="sexy_line"><h4><%= vote_because(@user) %></h4></div>
    <p><%=  @user.i_voted_because %></p>
  </div>
  <% end %>
  <% if !@user.where_i_voted_at.blank?%>
  <div class="field">
    <div class="sexy_line"><h4><%= vote_at(@user) %></h4></div>
    <p><%=  @user.where_i_voted_at %></p>
  </div>
  <% end %>
</div>
<%= render :partial => "sopa/partials/badge_select" %>
<%= render :partial => "providers/partials/vit" %>